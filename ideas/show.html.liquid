<div class="span-16 last content" id="question">
  <span id="backLink">
    <a href="{{rusic.permalink}}" class="button gray small">Back to list</a>
  </span>
  <h3>{{idea.title}}
    {% if current_user and rusic.owner.id == current_user.id %}
      [<a href="{{idea.permalink}}/edit">edit</a>]
    {% endif %}
  </h3>
  <span id="isUseful">
    <span class="likes-count">{{idea.likes}} &hearts;</span>
    <a href="{{idea.like_link}}" class="button orange" data-method="post">Is this helpful?</a>
  </span>
  <div class="content">
    {{idea.content | markdown}}
  </div>
  <div id="peopleInterested">
       <h3>People that found this helpful</h3>
       <ul>
           <li><a href="http://twitter.com/redeye"><img src="http://a0.twimg.com/profile_images/1218143527/IMG_0032_normal.jpg" /></a></li>
          <li><a href="http://twitter.com/redeye"><img src="http://a0.twimg.com/profile_images/1218143527/IMG_0032_normal.jpg" /></a></li>
      </ul>
  </div>
</div>
